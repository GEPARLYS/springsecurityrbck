<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%-5p] [%c{1}] - %m%n"/>
        </Console>
        <File name="File" fileName="logs/app.log" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5p] [%c{1}] - %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Spring Security 调试 -->
        <Logger name="org.springframework.security" level="DEBUG"/>
        <Logger name="org.springframework.security.web.access.intercept.FilterSecurityInterceptor" level="DEBUG"/>
        <Logger name="org.springframework.security.access.vote" level="TRACE"/>

        <!-- 你的业务包 -->
        <Logger name="com.ssm" level="DEBUG"/>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
